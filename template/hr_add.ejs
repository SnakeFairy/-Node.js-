                <div class="card-body" >
                    <div class="card">
                        <form class="login-form" method="post" action="/hr_add">
                            <h1>添加新员工</h1>
                            <div class="txtb">
                                <input type="number" name="per_id" placeholder="用户ID">
                            </div>
                            <div class="txtb">
                                <input type="text" name="uname" placeholder="员工姓名">
                            </div>
                            <div class="txtb1">
                                <input type="text" placeholder="性别">
                            </div>
                            <div class="input-group mb-3">
                                <select class="form-select w-25" aria-label="Default select example" name="gender">
                                    <option value="" disabled>请选择</option>
                                    <option value="1">男</option>
                                    <option value ="0">女</option>
                                </select>
                            </div>
                            <div class="txtb">
                                <input type="number" name="age" placeholder="年龄">
                            </div>
                            <div class="txtb1">
                                <input type="text" placeholder="出生日期">
                            </div>
                            <div class="txtb">
                                <input type="date" name="birthday" placeholder="出生日期">
                            </div>
                            <div class="txtb">
                                <input type="text" name="loginame" placeholder="登录账号">
                            </div>
                            <div class="txtb">
                                <input type="password" name="pwd" placeholder="密码">
                            </div>



                            <div class="txtb1">
                                <input type="text" placeholder="婚否">
                            </div>
                            <div class="input-group mb-3">
                                <select class="form-select w-25" aria-label="Default select example" name="isMarry">
                                    <option value="" disabled>请选择</option>
                                    <option value="1">是</option>
                                    <option value ="0">否</option>
                                </select>
                            </div>
                            <div class="txtb">
                                <input type="text" name="address" placeholder="居住地址">
                            </div>
                            <div class="txtb">
                                <input type="number" name="personNum" placeholder="身份证号" maxlength="18">
                            </div>
                            <div class="txtb1">
                                <input type="text" placeholder="入职时间">
                            </div>
                            <div class="txtb">
                                <input type="date" name="entryTime" placeholder="入职时间">
                            </div>
                            <div class="txtb1">
                                <input type="text" placeholder="学历">
                            </div>
                            <div class="input-group mb-3">
                                <select class="form-select w-25" aria-label="Default select example" name="edu_id">
                                    <option value="" disabled>请选择</option>
                                    <option value="1">初中</option>
                                    <option value ="2">高中</option>
                                    <option value ="3">本科</option>
                                    <option value ="4">硕士</option>
                                    <option value ="5">博士</option>
                                </select>
                            </div>
                            <div class="txtb1">
                                <input type="text" placeholder="在职状态">
                            </div>
                            <div class="input-group mb-3">
                                <select class="form-select w-25" aria-label="Default select example" name="status">
                                    <option value="" disabled>请选择</option>
                                    <option value="1">在职</option>
                                    <option value ="0">离职/未入职</option>
                                </select>
                            </div>
                            <div class="txtb1">
                                <input type="text" placeholder="岗位">
                            </div>
                            <div class="input-group mb-3">
                                <select class="form-select w-25" aria-label="Default select example" name="port_id">
